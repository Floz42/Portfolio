<div class="col-md-6 col-lg-6 col-xs-12 m-auto" id="comments">
    <h2 class="section_comments text-center mb-3"><img class="mr-2" style="opacity:0.5" src="{{ asset('images/bird.png')}}" alt="bird">LAISSER UN COMMENTAIRE :</h2>
    {% if not app.user %}
        <div id="comments_links" class="text-center m-auto">
            <p>
                <div id="connexion">( Se connecter </div>
                -
                <div id="register"> S'inscrire )</div>
            </p>
        </div>
        {% if not form_subscribe.vars.valid %}
        {% for child in form_subscribe.children %}
            {%for error in child.vars.errors%}
                <div class="alert alert-danger text-center">{{ error.message }}</div>
            {%endfor%}
        {%endfor%}
        {%endif%}
        {% for message in app.flashes('subscribe_success') %}
            <div class="alert alert-success text-center">{{ message }}</div>
        {% endfor %}
        {% if error %}
        <div class="alert alert-danger text-center">{{ error.messageKey| trans(error.messagedata, 'security') }}</div>
    {% endif %}
    {% else %}
        <div id="deconnexion">
            <p>Vous êtes connecté en tant que {{ app.user.username }} <a href="{{ path('logout') }}">(Se déconnecter)</a></p>
        </div>
        <form class="mt-3" action="{{ path('post_comment') }}"method="post"> 
            <div class="form-group">
              <label for="put_message">Votre commentaire :</label>
              <textarea class="form-control" name="comment" id="put_message"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Envoyer</button>
          </form>
    {% endif %}
    <div id="form_subscribe"></div>
    <div id="form_submit"></div>
    <p class="mt-5">Liste des commentaires : </p>
    <hr>
    <div class="container" id="container_comments">
        {% for comment in comments %}
        <div class="row">
            <div class="row col-12">
                 Posté le {{ comment.date_comment|date('d/m/Y') }} par : {{ comment.users.username }}
            </div>
            <div class="row col-12">
                {{ comment.comment }}
            </div>
        </div>
        <hr>
        {% endfor %}
        <div class="navigation">
            {{ knp_pagination_render(comments) }}
        </div>
    </div>
</div>