<div class="ajax_cv_view">
    <h2 class="text-center section_title_litle">
        Mes expériences
    </h2>
    <div class="align-items-center p-auto">
        <div class="mt-3 mb-3">
            <a href="{{ path('add_xp') }}"><input class="btn btn-primary" type="button" value="Ajouter"></a>
        </div>    
        <table class="table table-sriped table-responsive-sm">
            <thead>
                <tr>
                    <th>Année(s)</th>
                    <th>Expérience</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for xp in xps %}
                    <tr class="xp_id{{ xp.id }}">
                        <th>{{ xp.year }}</th>
                        <th>{{ xp.name }}</th>
                        <th class="margin_button_xs">
                            <a href="{{ path('update_xp', {'id': xp.id }) }}" class="mb-1 admin_update_xp"><input type="button" value="MODIFIER" class="btn btn-primary"></a> 
                            <a href="{{ path('delete_xp', {'id': xp.id }) }}" class="mt-1 admin_delete_xp"><input type="button" value="SUPPRIMER" class="btn btn-danger"></a> 
                        </th>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>







