
<div class="ajax_cv_view mx-auto">
    <h2 class="text-center section_title_litle">
        Mes Soft skills :
    </h2>
    <div class="mt-3 mb-3 text-center">
    <a href="{{ path('add_sskill') }}" class="mt-3 mb-3"><input class="btn btn-primary" type="button" value="Ajouter"></a>
    </div>
    <div class="row align-items-center p-auto table-responsive-sm">
        <table class="table table-sriped col-6 mx-auto">
            <thead>
                <tr>
                    <th>Soft skills :</th>
                </tr>
            </thead>
            <tbody>
                {% for softskill in softskills %}
                    <tr class="{{ softskill.id }}"> 
                        <th>                
                            <div class="soft_skills m-auto badge {{ random(['badge-primary', 'badge-success', 'badge-danger', 'badge-warning', 'badge-info']) }}">{{ softskill.name }}</div>
                        </th>
                        <th class="margin_button_xs">
                            <a href="{{ path('update_sskill', {'id': softskill.id }) }}" class="mb-1 admin_update_sskills"><input type="button" value="MODIFIER" class="btn btn-primary"></a> 
                            <a href="{{ path('delete_sskill', {'id': softskill.id }) }}" class="mt-1 admin_delete_sskills"><input type="button" value="SUPPRIMER" class="btn btn-danger"></a> 
                        </th>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>










