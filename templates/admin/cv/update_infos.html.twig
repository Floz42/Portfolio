{% extends '/admin/base.html.twig' %}
{% block body %}

<div class="container-fluid">
        <h2 class="mt-3 mb-3 text-center">Modifier mes informations : </h2>
    <div class="form_add col-4 mx-auto p-3 border border-primary rounded">
        <div class="add_diplome mx-auto">
            {{ form_start(form) }}
                <div class="mr-4">
                    {{ form_row(form.imageFile, {'label': 'Photo : '}) }}
                </div>
                <div class="mr-4">
                    {{ form_row(form.name, {'label': 'Nom : '}) }}
                </div>
                <div class="mr-4">
                    {{ form_row(form.lastname, {'label': 'Prénom : '}) }}
                </div>
                <div class="mr-4">
                    {{ form_row(form.phone, {'label': 'Téléphone : '}) }}
                </div>
                <div class="mr-4">
                    {{ form_row(form.email, {'label': 'E-mail : '}) }}
                </div>
                <div class="mr-4">
                    {{ form_row(form.age, {'label': 'Age : '}) }}
                </div>
                <div>
                    <input type="submit" value="Valider" class="btn btn-outline-primary">
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
