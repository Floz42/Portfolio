{% extends '/admin/base.html.twig' %}
{% block body %}

<div class="container-fluid">
    {% if exist %}
        <h2 class="mt-3 mb-3 text-center">Modifier une expérience : </h2>
    {% else %}
        <h2 class="mt-3 mb-3 text-center">Ajouter une expérience : </h2>
    {% endif %}
    <div class="form_add col-4 mx-auto p-3 border border-primary rounded">
        <div class="add_xp mx-auto">
            {{ form_start(form) }}
                <div class="mr-4">
                    {{ form_row(form.year, {'label': 'Année(s) :'}) }}
                </div>
                <div class="mr-4">
                    {{ form_row(form.name, {'label': 'Nom : '}) }}
                </div>
                <div>
                    <input type="submit" value="Valider" class="btn btn-outline-primary">
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}
