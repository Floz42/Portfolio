{% extends '/admin/base.html.twig' %}
{% block body %}
<div class="container-fluid">
    <h2 class="text-center mt-3 mb-5">Gestion des commentaires.</h2>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success col-5 text-center m-auto">{{ message }}</div>
    {% endfor %}
    <div class="container" id="admin_comments" class="col-10">
        <p>Vous pouvez ici supprimer les commentaires ind√©sirables.</p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Pseudo : </th>
                    <th style="width: 50%">Commentaire : </th>
                    <th class="text-center">Date du commentaire : </th>
                    <th>Action :</th>
                </tr>
            </thead>
            <tbody>
                {% for comment in comments %}
                    <tr>
                        <th>{{ comment.users.username }}</th>
                        <th>{{ comment.comment }}</th>
                        <th class="text-center">{{ comment.date_comment|date('d/m/Y') }}</th>
                        <th>
                            <form action="{{ path('delete_comment', {'id': comment.id}) }}" method="post" onsubmit="return confirm('Voulez-vous vraiment supprimer ce commentaire ?')">
                                <input type="hidden" name="_method" value="SUP">
                                <input type="hidden" name="_token" value="{{ csrf_token('SUP' ~ comment.id )}}">
                                <input type="submit" class="btn btn-danger" value="Supprimer">
                            </form>
                        </th>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}